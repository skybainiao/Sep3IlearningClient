@page "/NES"
@using LoginExample.Data
@using LoginExample.Data.Impl

<hr style=" border: 2px solid white" />
<br>

<table class="table table-striped" style=" color: #95999c; font-weight: bolder">
    <thead>
    <tr style="text-align: center; font-size: 25px">
        <th>Session</th>
        <th>Date</th>
        <th>Content</th>
        <th>Preparation</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var NES in courses)
    {<tr style="text-align: center; font-size: 35px">
         <td>
             @NES.session
             </td>
         <td>
             @NES.date
         </td>
         <td>
             <ul>
                 <li>@NES.content</li>
             </ul>
             </td>
         <td>
             @NES.preparation
             </td>
         </tr>}
    </tbody>
</table>

@code {
    private CourseData _courseData = new CourseDataService();
    private IList<Models.Course> courses = new List<Models.Course>();

    protected override async Task OnInitializedAsync()
    {
        courses = await _courseData.getAllCourses("NES");
    }

}